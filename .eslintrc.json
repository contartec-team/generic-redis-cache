{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },
  "globals": {
    "faker": true,
    "rewire": true,
    "expect": true,
    "sinon": true,
    "getStub": true,
    "getSpy": true,
    "clear_database": true,
    "redis": true,
    "redisInstance" : true
  },
  "rules": {
    "eqeqeq": "off",
    "keyword-spacing": "error",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "require-yield": "off",
    "no-unexpected-multiline": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ArrayExpression": 1,
        "ObjectExpression": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": [
      2,
      { "allow": ["warn", "error"] }
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "require-jsdoc": ["error"],
    "valid-jsdoc": [
      "error",
      {
        "requireParamDescription": false
      }
    ]
  }
}
